            <img class="masthead-avatar mb-5 rounded-circle" src="~/images/supervisor.webp" alt="..." />
        }
        @if (ViewBag.Type == "ولي_أمر")
        {
                <img class="masthead-avatar mb-5 rounded-circle" src="~/images/parent.png" alt="..." />
        }
        
        <!-- Masthead Heading-->
        <h1 class="masthead-heading text-uppercase mb-0"> أهلا وسهلا @ViewBag.Name</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Masthead Subheading-->
