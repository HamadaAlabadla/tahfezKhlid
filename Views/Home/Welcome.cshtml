        <br />
        <br />
        <!-- Masthead Avatar Image-->
        @if (ViewBag.Type == "آدمن")
        {
            <img class="masthead-avatar mb-5 rounded-circle" src="~/images/avataaars.svg" alt="..." />
        }
        @if (ViewBag.Type == "محفظ")
        {
            <img class="masthead-avatar mb-5 rounded-circle" src="~/images/memorizer.jpg" alt="..." />
        }
        @if (ViewBag.Type == "مشرف")
