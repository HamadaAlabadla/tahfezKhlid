@page
@model RegisterModel
@{
    var name = ViewBag.Type;
    ViewData["Title"] = "إضافة "+name+" جديد";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <input type="hidden" name="Id" value="@ViewBag.Id" />
            <input type="hidden" name="sessionId" value="@ViewBag.sessionId" />
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" autocomplete="Name" aria-required="true" />
                <label dir="rtl" asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input  asp-for="Input.IdentificationNumber" class="form-control" autocomplete="IdentificationNumber" aria-required="true" />
                <label dir="rtl" asp-for="Input.IdentificationNumber"></label>
                <span asp-validation-for="Input.IdentificationNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="number" asp-for="Input.PhoneNumber" class="form-control" autocomplete="PhoneNumber" aria-required="true" />
                <label dir="rtl" asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">إضافة</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
